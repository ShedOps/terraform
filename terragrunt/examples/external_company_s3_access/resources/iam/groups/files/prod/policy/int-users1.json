{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowAllAccessInFolder1",
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": ["arn:aws:s3:::${bucket_name}/folder1/*"]
        },
        {
            "Sid": "AllowListAccessInFolder1",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": ["arn:aws:s3:::${bucket_name}"],
            "Condition":{"StringLike":{"s3:prefix":["folder1/*"]}}
        }
    ]
}
